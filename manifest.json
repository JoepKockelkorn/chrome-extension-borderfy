{
  "name": "Borderfy Elements",
  "description": "Toggle the extension to visualize each HTML element with colors and borders",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "64": "64x64.png",
    "128": "128x128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Toggle borderfy"
  },
  "permissions": ["activeTab"]
}
